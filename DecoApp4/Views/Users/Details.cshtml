@model DecoApp4.Models.User

@{
    ViewData["Title"] = "Details";
}

<div class="detalle">
    <h1 class="tituloDetalle">Usuario: @Html.DisplayFor(model => model.UserName)</h1>
    <div id="dialog" title="Borrar User">
        <p>Vas a eliminar el user: @Html.DisplayFor(model => model.Nombre)</p>
    </div>
    <div class="infoDetalle">
        <div class="indet">
            <div>
                <label class="indetDescripcion">
            @Html.DisplayNameFor(model => model.Nombre)
                </label>
                <label>
            @Html.DisplayFor(model => model.Nombre)
                    </label>
            </div>
            <div>
                <label class="indetDescripcion">
            @Html.DisplayNameFor(model => model.UserName)
                </label>
                <label>
            @Html.DisplayFor(model => model.UserName)
                    </label>
            </div>
            <div>
                <label class="indetDescripcion">
            @Html.DisplayNameFor(model => model.Password)
                </label>
                <label>
            @Html.DisplayFor(model => model.Password)
                </label>
            </div>
        </div>
        <div id="opDetalles">
            <div id="edit" class="edit" value=0>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Nombre" class="labelEdit"></label>
                    <input asp-for="Nombre" class="InputEdit" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="labelEdit"></label>
                    <input asp-for="UserName" class="InputEdit" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="labelEdit"></label>
                    <input asp-for="Password" class="InputEdit" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <input type="submit" value="Guardar" class="inputBuscador" id="btnEnvioEdit" />
                </div>
            </form>
        </div>
    </div>
    </div>
        <div id="btnControl">
            <partial name="../Home/BotonInicio.cshtml" />
            <partial name="../Home/BotonAtras.cshtml" />
            <partial name="../Home/BotonNuevo.cshtml" />
            <partial name="../Home/BotonEditar.cshtml" />
            <partial name="../Home/BotonBorrar.cshtml" />
        </div>
</div>
